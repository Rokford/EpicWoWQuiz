<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:clickable="true"
              tools:context="com.mobinautsoftware.epicwowquiz.FactionChoiceFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/upperRL"
        android:background="@color/blue"
        android:layout_gravity="center_horizontal|top">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_margin="15dp"
                android:id="@+id/humanImageView"
                android:layout_height="60dp"
                android:src="@drawable/priest"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/nightelfImageView"

                android:layout_margin="15dp"

                android:src="@drawable/mage"/>

            <ImageView
                android:layout_width="60dp"
                android:id="@+id/gnomeImageView"

                android:layout_height="60dp"
                android:layout_margin="15dp"

                android:src="@drawable/druid"/>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/loweRL"

        android:background="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_margin="15dp"
                android:id="@+id/orcImageView"

                android:layout_height="60dp"
                android:src="@drawable/warrior"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:id="@+id/undeadImageView"

                android:src="@drawable/rogue"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:id="@+id/bloodelfImageView"

                android:src="@drawable/hunter"/>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
